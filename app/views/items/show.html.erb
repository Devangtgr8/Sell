<%- model_class = @item.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Item:</strong></dt>
  <dd><%= link_to @item.item_class.title, @item.item_class %></dd>
  <dt><strong>Previous Owner:</strong></dt>
  <dd><%= link_to @item.person.name, @item.person %></dd>
  <dt><strong>Sold To:</strong></dt>
  <dd><%= link_to @item.bill.customer_name, @item.bill rescue '' %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              items_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_item_path(@item), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              item_path(@item),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
  <%= link_to t('.new', :default => t("helpers.links.new")),
              new_item_path,
              :class => 'btn btn-primary' %>
  
</div>
