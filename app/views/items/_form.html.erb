<%= form_for @item, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :item_class_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :item_class_id, @item_classes, :id, :title %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :person_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :person_id, @people, :id, :name %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :bill_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :bill_id, @bills, :id, :customer_name %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                items_path, :class => 'btn' %>
  </div>
<% end %>
